{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "buildPresets": [
    { "name": "Release", "configurePreset": "ninja-Release", "configuration": "Release" },
    { "name": "Debug-DXVK-2.6.1", "configurePreset": "ninja-Debug-DXVK-2.6.1", "configuration": "Debug" },
    { "name": "Debug-DXVK-2.3.1", "configurePreset": "ninja-Debug-DXVK-2.3.1", "configuration": "Debug" }
  ],
  "configurePresets": [
    {
      "name": "ninja-Release",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ninja-Debug-DXVK-2.6.1",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug", "DXVK_TAG": "v2.6.1"
      }
    },
    {
      "name": "ninja-Debug-DXVK-2.3.1",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug", "DXVK_TAG": "v2.3.1"
      }
    }
  ]
}
